LoopItemsLabel.Font = Enum.Font.GothamBold
LoopItemsLabel.TextXAlignment = Enum.TextXAlignment.Left
LoopItemsLabel.Parent = LoopBuyContainer

-- FIXED DRAG SYSTEM
local dragging = false
local dragStart
local startPos

local function updateDrag(input)
    local delta = input.Position - dragStart
    MainFrame.Position = UDim2.new(
        startPos.X.Scale,
        startPos.X.Offset + delta.X,
        startPos.Y.Scale,
        startPos.Y.Offset + delta.Y
    )
end

TitleBar.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
        dragging = true
        dragStart = input.Position
        startPos = MainFrame.Position
        input.Changed:Connect(function()
            if input.UserInputState == Enum.UserInputState.End then
                dragging = false
            end
        end)
    end
end)

UserInputService.InputChanged:Connect(function(input)
    if dragging and (input.UserInputType == Enum.UserInputType.MouseMovement or input.UserInputType == Enum.UserInputType.Touch) then
        updateDrag(input)
    end
end)

-- FIXED: Minimize Function
local function ToggleMinimize()
    if isMinimized then
        MinimizeButton.Text = "-"
        MinimizeButton.TextColor3 = Color3.fromRGB(100, 200, 255)
        
        TabsContainer.Visible = true
        ContentContainer.Visible = true
        
        TweenService:Create(MainFrame, TweenInfo.new(0.5, Enum.EasingStyle.Back, Enum.EasingDirection.Out), {
            Size = originalSize,
            Position = UDim2.new(0.5, -baseWidth/2, 0.5, -baseHeight/2)
        }):Play()
        
        isMinimized = false
    else
        MinimizeButton.Text = "+"
        MinimizeButton.TextColor3 = Color3.fromRGB(255, 255, 255)
        
        TabsContainer.Visible = false
        ContentContainer.Visible = false
        
        TweenService:Create(MainFrame, TweenInfo.new(0.5, Enum.EasingStyle.Back, Enum.EasingDirection.Out), {
            Size = minimizedSize,
            Position = UDim2.new(0.5, -minimizedSize.X.Offset/2, 0.1, 10)
        }):Play()
        
        isMinimized = true
    end
end

MinimizeButton.MouseButton1Click:Connect(ToggleMinimize)

-- PRODUCT GRAB SYSTEM
local function GetAllDeveloperProducts()
    local allDevProducts = {}
    
    local success, productInfo = pcall(function()
        return MarketplaceService:GetDeveloperProductsAsync()
    end)
    
    if success and productInfo then
        local currentPage = productInfo:GetCurrentPage()
        if currentPage then
            for _, product in pairs(currentPage) do
                table.insert(allDevProducts, product)
            end
        end
        
        while not productInfo.IsFinished do
            local nextSuccess = pcall(function()
                productInfo:AdvanceToNextPageAsync()
            end)
            if nextSuccess then
                local nextPage = productInfo:GetCurrentPage()
                for _, product in pairs(nextPage) do
                    table.insert(allDevProducts, product)
                end
            else
                break
            end
        end
    end
    
    -- Test i√ßin √∂rnek √ºr√ºnler (ger√ßek √ºr√ºn yoksa)
    if #allDevProducts == 0 then
        table.insert(allDevProducts, {ProductId = 123456789, Name = "VIP Package", Description = "Exclusive VIP benefits", PriceInRobux = 499})
        table.insert(allDevProducts, {ProductId = 987654321, Name = "Speed Boost", Description = "Increase your movement speed", PriceInRobux = 199})
        table.insert(allDevProducts, {ProductId = 555555555, Name = "Coins Pack", Description = "Get 1000 coins instantly", PriceInRobux = 99})
        table.insert(allDevProducts, {ProductId = 111222333, Name = "God Mode", Description = "Become invincible", PriceInRobux = 999})
        table.insert(allDevProducts, {ProductId = 444555666, Name = "Premium Skin", Description = "Exclusive character skin", PriceInRobux = 299})
    end
    
    return allDevProducts
end

local function StartLoop(productId, productName)
    if activeLoops[productId] then
        activeLoops[productId] = false
        task.wait(0.1)
    end
    
    activeLoops[productId] = true
    
    coroutine.wrap(function()
        while activeLoops[productId] do
            MarketplaceService:SignalPromptProductPurchaseFinished(player.UserId, productId, true)
            task.wait(loopDelay)
        end
    end)()
end

local function StopLoop(productId, productName)
    if activeLoops[productId] then
        activeLoops[productId] = false
    end
end

local function ResetAllToggles()
    for productId, toggleData in pairs(loopToggleButtons) do
        if toggleData and toggleData.ToggleButton and toggleData.ToggleButton.Parent then
            TweenService:Create(toggleData.ToggleButton, TweenInfo.new(0.2, Enum.EasingStyle.Quad, Enum.EasingDirection.Out), {
                Position = UDim2.new(0, 2, 0.5, -12),
                BackgroundColor3 = Color3.fromRGB(220, 70, 70)
            }):Play()
            
            if toggleData.ToggleBackground then
                TweenService:Create(toggleData.ToggleBackground, TweenInfo.new(0.2), {
                    BackgroundColor3 = Color3.fromRGB(60, 60, 80)
                }):Play()
            end
            
            if toggleData.UpdateState then
                toggleData.UpdateState(false)
            end
        end
    end
end

local function StartAllLoops()
    for _, product in pairs(allProducts) do
        local id = product.ProductId
        local name = product.Name
        
        if not activeLoops[id] then
            activeLoops[id] = true
            StartLoop(id, name)
        end
        
        if loopToggleButtons[id] then
            local toggleData = loopToggleButtons[id]
            if toggleData and toggleData.ToggleButton and toggleData.ToggleButton.Parent then
                TweenService:Create(toggleData.ToggleButton, TweenInfo.new(0.2, Enum.EasingStyle.Quad, Enum.EasingDirection.Out), {
                    Position = UDim2.new(1, -26, 0.5, -12),
                    BackgroundColor3 = Color3.fromRGB(70, 220, 100)
                }):Play()
                
                if toggleData.ToggleBackground then
                    TweenService:Create(toggleData.ToggleBackground, TweenInfo.new(0.2), {
                        BackgroundColor3 = Color3.fromRGB(40, 80, 40)
                    }):Play()
                end
                
                if toggleData.UpdateState then
                    toggleData.UpdateState(true)
                end
            end
        end
    end
end

local function StopAllLoops()
    for productId, _ in pairs(activeLoops) do
        activeLoops[productId] = false
    end
    
    ResetAllToggles()
end

local function CreateProductButton(devProduct)
    local id = devProduct.ProductId or 0
    local name = devProduct.Name or "Unnamed Product"
    local desc = devProduct.Description or "No description available"
    local price = devProduct.PriceInRobux or 0
    
    if #desc > 25 then
        desc = desc:sub(1, 22) .. "..."
    end
    
    local ButtonFrame = Instance.new("Frame")
    ButtonFrame.Name = "ProductButton_" .. id
    ButtonFrame.Size = UDim2.new(1, 0, 0, 70)
    ButtonFrame.BackgroundColor3 = Color3.fromRGB(35, 35, 50)
    ButtonFrame.BackgroundTransparency = 0.15
    ButtonFrame.BorderSizePixel = 0
    ButtonFrame.Parent = ProductsContent
    
    local ButtonCorner = Instance.new("UICorner")
    ButtonCorner.CornerRadius = UDim.new(0, 10)
    ButtonCorner.Parent = ButtonFrame
    
    local Button = Instance.new("TextButton")
    Button.Name = "Button"
    Button.Size = UDim2.new(1, 0, 1, 0)
    Button.BackgroundTransparency = 1
    Button.Text = ""
    Button.AutoButtonColor = false
    Button.Parent = ButtonFrame
    
    local Title = Instance.new("TextLabel")
    Title.Name = "Title"
    Title.Size = UDim2.new(1, -80, 0, 25)
    Title.Position = UDim2.new(0, 10, 0, 8)
    Title.BackgroundTransparency = 1
    Title.Text = name
    Title.TextColor3 = Color3.fromRGB(255, 255, 255)
    Title.TextSize = 14
    Title.Font = Enum.Font.GothamBold
    Title.TextXAlignment = Enum.TextXAlignment.Left
    Title.TextTruncate = Enum.TextTruncate.AtEnd
    Title.Parent = ButtonFrame
    
    local Price = Instance.new("TextLabel")
    Price.Name = "Price"
    Price.Size = UDim2.new(0, 70, 0, 25)
    Price.Position = UDim2.new(1, -80, 0, 8)
    Price.BackgroundTransparency = 1
    Price.Text = "R$" .. tostring(price)
    Price.TextColor3 = Color3.fromRGB(100, 200, 100)
    Price.TextSize = 14
    Price.Font = Enum.Font.GothamBold
    Price.TextXAlignment = Enum.TextXAlignment.Right
    Price.Parent = ButtonFrame
    
    local Description = Instance.new("TextLabel")
    Description.Name = "Description"
    Description.Size = UDim2.new(1, -20, 0, 20)
    Description.Position = UDim2.new(0, 10, 0, 35)
    Description.BackgroundTransparency = 1
    Description.Text = desc
    Description.TextColor3 = Color3.fromRGB(180, 180, 180)
    Description.TextSize = 12
    Description.Font = Enum.Font.Gotham
    Description.TextXAlignment = Enum.TextXAlignment.Left
    Description.TextTruncate = Enum.TextTruncate.AtEnd
    Description.Parent = ButtonFrame
    
    local IDLabel = Instance.new("TextLabel")
    IDLabel.Name = "IDLabel"
    IDLabel.Size = UDim2.new(1, -20, 0, 15)
    IDLabel.Position = UDim2.new(0, 10, 1, -18)
    IDLabel.BackgroundTransparency = 1
    IDLabel.Text = "ID: " .. tostring(id)
    IDLabel.TextColor3 = Color3.fromRGB(100, 150, 255)
    IDLabel.TextSize = 10
    IDLabel.Font = Enum.Font.Gotham
    IDLabel.TextXAlignment = Enum.TextXAlignment.Left
    IDLabel.TextTruncate = Enum.TextTruncate.AtEnd
    IDLabel.Parent = ButtonFrame
    
    Button.MouseButton1Click:Connect(function()
        MarketplaceService:SignalPromptProductPurchaseFinished(player.UserId, id, true)
    end)
    
    Button.MouseEnter:Connect(function()
        TweenService:Create(ButtonFrame, TweenInfo.new(0.2), {
            BackgroundTransparency = 0.05,
            BackgroundColor3 = Color3.fromRGB(45, 45, 65)
        }):Play()
    end)
    
    Button.MouseLeave:Connect(function()
        TweenService:Create(ButtonFrame, TweenInfo.new(0.2), {
            BackgroundTransparency = 0.15,
            BackgroundColor3 = Color3.fromRGB(35, 35, 50)
        }):Play()
    end)
end

local function CreateLoopToggle(devProduct)
    local id = devProduct.ProductId or 0
    local name = devProduct.Name or "Unnamed Product"
    local desc = devProduct.Description or "No description available"
    local price = devProduct.PriceInRobux or 0
    
    local shortName = name
    if #name > 15 then
        shortName = name:sub(1, 12) .. "..."
    end
    
    local ToggleFrame = Instance.new("Frame")
    ToggleFrame.Name = "LoopToggle_" .. id
    ToggleFrame.Size = UDim2.new(1, 0, 0, 60)
    ToggleFrame.BackgroundColor3 = Color3.fromRGB(35, 35, 50)
    ToggleFrame.BackgroundTransparency = 0.15
    ToggleFrame.BorderSizePixel = 0
    ToggleFrame.Parent = LoopBuyContainer
    
    local ToggleCorner = Instance.new("UICorner")
    ToggleCorner.CornerRadius = UDim.new(0, 10)
    ToggleCorner.Parent = ToggleFrame
    
    local Title = Instance.new("TextLabel")
    Title.Name = "Title"
    Title.Size = UDim2.new(0.7, -10, 0, 25)
    Title.Position = UDim2.new(0, 10, 0, 8)
    Title.BackgroundTransparency = 1
    Title.Text = shortName
    Title.TextColor3 = Color3.fromRGB(255, 255, 255)
    Title.TextSize = 13
    Title.Font = Enum.Font.GothamBold
    Title.TextXAlignment = Enum.TextXAlignment.Left
    Title.TextTruncate = Enum.TextTruncate.AtEnd
    Title.Parent = ToggleFrame
    
    local PriceLabel = Instance.new("TextLabel")
    PriceLabel.Name = "Price"
    PriceLabel.Size = UDim2.new(0.7, -10, 0, 20)
    PriceLabel.Position = UDim2.new(0, 10, 0, 33)
    PriceLabel.BackgroundTransparency = 1
    PriceLabel.Text = "R$" .. tostring(price)
    PriceLabel.TextColor3 = Color3.fromRGB(100, 200, 100)
    PriceLabel.TextSize = 12
    PriceLabel.Font = Enum.Font.Gotham
    PriceLabel.TextXAlignment = Enum.TextXAlignment.Left
    PriceLabel.Parent = ToggleFrame
    
    local ToggleBackground = Instance.new("Frame")
    ToggleBackground.Name = "ToggleBackground"
    ToggleBackground.Size = UDim2.new(0, 55, 0, 28)
    ToggleBackground.Position = UDim2.new(1, -65, 0.5, -14)
    ToggleBackground.BackgroundColor3 = Color3.fromRGB(60, 60, 80)
    ToggleBackground.BorderSizePixel = 0
    ToggleBackground.Parent = ToggleFrame
    
    local ToggleBGCorner = Instance.new("UICorner")
    ToggleBGCorner.CornerRadius = UDim.new(1, 0)
    ToggleBGCorner.Parent = ToggleBackground
    
    local ToggleButton = Instance.new("TextButton")
    ToggleButton.Name = "ToggleButton"
    ToggleButton.Size = UDim2.new(0, 24, 0, 24)
    ToggleButton.Position = UDim2.new(0, 2, 0.5, -12)
    ToggleButton.BackgroundColor3 = Color3.fromRGB(220, 70, 70)
    ToggleButton.BorderSizePixel = 0
    ToggleButton.Text = ""
    ToggleButton.ZIndex = 2
    ToggleButton.Parent = ToggleBackground
    
    local ToggleButtonCorner = Instance.new("UICorner")
    ToggleButtonCorner.CornerRadius = UDim.new(1, 0)
    ToggleButtonCorner.Parent = ToggleButton
    
    local isToggled = false
    
    loopToggleButtons[id] = {
        ToggleButton = ToggleButton,
        ToggleBackground = ToggleBackground,
        UpdateState = function(state)
            isToggled = state
        end
    }
    
    local function UpdateToggle()
        if isToggled then
            TweenService:Create(ToggleButton, TweenInfo.new(0.2, Enum.EasingStyle.Quad, Enum.EasingDirection.Out), {
                Position = UDim2.new(1, -26, 0.5, -12),
                BackgroundColor3 = Color3.fromRGB(70, 220, 100)
            }):Play()
            TweenService:Create(ToggleBackground, TweenInfo.new(0.2), {
                BackgroundColor3 = Color3.fromRGB(40, 80, 40)
            }):Play()
            StartLoop(id, name)
        else
            TweenService:Create(ToggleButton, TweenInfo.new(0.2, Enum.EasingStyle.Quad, Enum.EasingDirection.Out), {
                Position = UDim2.new(0, 2, 0.5, -12),
                BackgroundColor3 = Color3.fromRGB(220, 70, 70)
            }):Play()
            TweenService:Create(ToggleBackground, TweenInfo.new(0.2), {
                BackgroundColor3 = Color3.fromRGB(60, 60, 80)
            }):Play()
            StopLoop(id, name)
        end
    end
    
    ToggleButton.MouseButton1Click:Connect(function()
        isToggled = not isToggled
        UpdateToggle()
    end)
    
    ToggleBackground.InputBegan:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
            isToggled = not isToggled
            UpdateToggle()
        end
    end)
    
    ToggleFrame.MouseEnter:Connect(function()
        TweenService:Create(ToggleFrame, TweenInfo.new(0.2), {
            BackgroundTransparency = 0.05,
            BackgroundColor3 = Color3.fromRGB(45, 45, 65)
        }):Play()
    end)
    
    ToggleFrame.MouseLeave:Connect(function()
        TweenService:Create(ToggleFrame, TweenInfo.new(0.2), {
            BackgroundTransparency = 0.15,
            BackgroundColor3 = Color3.fromRGB(35, 35, 50)
        }):Play()
    end)
    
    return ToggleFrame
end

local function SwitchTab(tabName)
    if tabName == "Products" then
        ProductsTab.BackgroundColor3 = Color3.fromRGB(60, 120, 255)
        ProductsTab.TextColor3 = Color3.fromRGB(255, 255, 255)
        LoopTab.BackgroundColor3 = Color3.fromRGB(35, 35, 55)
        LoopTab.TextColor3 = Color3.fromRGB(180, 180, 200)
        
        ProductsContent.Visible = true
        LoopContent.Visible = false
        activeTab = "Products"
    else
        LoopTab.BackgroundColor3 = Color3.fromRGB(70, 220, 100)
        LoopTab.TextColor3 = Color3.fromRGB(255, 255, 255)
        ProductsTab.BackgroundColor3 = Color3.fromRGB(35, 35, 55)
        ProductsTab.TextColor3 = Color3.fromRGB(180, 180, 200)
        
        ProductsContent.Visible = false
        LoopContent.Visible = true
        activeTab = "Loop"
    end
end

-- INITIALIZE
local function Initialize()
    allProducts = GetAllDeveloperProducts()
    
    if #allProducts > 0 then
        for _, devProduct in pairs(allProducts) do
            CreateProductButton(devProduct)
        end
        
        for _, devProduct in pairs(allProducts) do
            CreateLoopToggle(devProduct)
        end
        
        LoopItemsLabel.Text = "LOOP ITEMS (" .. #allProducts .. ")"
    end
    
    task.delay(0.6, SetupSlider)
end

-- EVENTS
CloseButton.MouseButton1Click:Connect(function()
    TweenService:Create(MainFrame, TweenInfo.new(0.3, Enum.EasingStyle.Quad, Enum.EasingDirection.In), {
        Size = UDim2.new(0, 0, 0, 0),
        Position = UDim2.new(0.5, 0, 0.5, 0)
    }):Play()
    task.delay(0.3, function()
        ScreenGui:Destroy()
    end)
end)

ProductsTab.MouseButton1Click:Connect(function()
    SwitchTab("Products")
end)

LoopTab.MouseButton1Click:Connect(function()
    SwitchTab("Loop")
end)

StartAllLoopsButton.MouseButton1Click:Connect(StartAllLoops)
StopAllLoopsButton.MouseButton1Click:Connect(StopAllLoops)

