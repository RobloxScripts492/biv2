-- Animate glow
coroutine.wrap(function()
    while Glow and Glow.Parent do
        for i = 0, 1, 0.01 do
            if not Glow or not Glow.Parent then break end
            Glow.ImageTransparency = 0.85 + math.sin(tick()) * 0.1
            task.wait(0.03)
        end
    end
end)()

